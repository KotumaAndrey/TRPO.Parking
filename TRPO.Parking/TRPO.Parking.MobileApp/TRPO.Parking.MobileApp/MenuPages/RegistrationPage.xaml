<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRPO.Parking.MobileApp.MenuPages.RegistrationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Title" FontSize="Large" Text="Регистрация"/>
            <Entry x:Name="firstNameEntry"  Placeholder = "Имя" TextChanged="firstNameEntry_TextChanged" />
            <Entry x:Name="lastNameEntry"  Placeholder = "Фамилия" TextChanged="lastNameEntry_TextChanged" />
            <Entry x:Name="phoneNumberEntry"  Placeholder = "Номер телефона" TextChanged="phoneNumberEntry_TextChanged" />
            <Entry x:Name="passwordEntry"  Placeholder = "Пароль" IsPassword ="True" />
            <Button x:Name="RegistrationBtn" FontSize="Large" Text="Зарегистрироваться" Clicked="RegistrationBtn_Clicked"/>
            <Button x:Name="BackBtn" FontSize="Large" Text="Назад" Clicked="BackBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>