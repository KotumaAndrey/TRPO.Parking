<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRPO.Parking.MobileApp.MainPage">
    <ContentPage.Content>

        <StackLayout x:Name="stackLayout" Spacing="8">
            <Label x:Name="Title" FontSize="Large" Text="Автосервис у ашота"/>

            <Entry x:Name="loginEntry" Placeholder = "Login" TextChanged="loginEntry_TextChanged" />
            <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" />
            <Label x:Name="textLabel" FontSize="Large" />
            <Button x:Name="EnterBtn" FontSize="Large" Text="Вход" Clicked="EnterBtn_Clicked"/>
            <Button x:Name="RegistrationBtn" FontSize="Large" Text="Регистрация" Clicked="RegistrationBtn_Clicked"/>
            <Button x:Name="ContactsBtn" FontSize="Large" Text="Контакты" Clicked="ContactsBtn_Clicked"/>
            <Button x:Name="Test" FontSize="Large" Text="Test" Clicked="TestBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
